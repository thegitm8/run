#!/usr/bin/env bash

function startdb() {
    if [ ! -d ".db" ]; then
        mkdir .db
    fi

    case "$1" in
        mongo)
            require db/mongo
            startMongoDBDevContainer
            trap stopMongoDBDevContainer EXIT
            break
            ;;
        influx)
            require db/influx
            startInfluxDBDevContainer
            trap stopInfluxDBDevContainer EXIT
            break
            ;;
        *)
            logError "$1 DB is not available."
            exit 1
            ;;
    esac
}
