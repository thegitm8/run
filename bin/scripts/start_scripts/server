#!/usr/bin/env bash

if [ ! -d "node_modules" ]; then npm i; fi

if [ "$NODE_ENV" == "development" ]; then # run in development mode

    npx nodemon \
        --quiet \
        --watch | jq '.'

else # run in production mode

    if [ ! -d "build" ]; then loadScript scripts/build; fi

    node $MAIN

fi
